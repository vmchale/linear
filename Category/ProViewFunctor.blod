module Category.ProViewFunctor

import Function
import Logic.Linear

interface ProViewFunctor (p : Type -> Type -> Type) where
  diviewmap : (a' -. a) -> (b -. b') -> p a b -> p a' b'

ProViewFunctor (-.) where
  diviewmap f g h = g .! h .! f
